@model CategoriaVM

@{
    var title = Model.CategoriaId == 0 ? "Nueva Categoría" : "Editar Categoría";
    var btnAction = Model.CategoriaId == 0 ? "Agregar": "Guardar";
}

<div class="row">
    <div class="col-6">

        <h2>@title</h2>
        <hr />

        <form action="/Categoria/AddEdit" method="post">
            <input type="hidden" asp-for="CategoriaId" />

            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" class="form-control" asp-for="Nombre" autocomplete="off" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            @if (ViewBag.MensajeExito != null)
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.MensajeExito
                </div>
            }


            <div class="d-grid gap-2 d-md-block mt-4">
                <button class="btn btn-primary" type="submit">@btnAction</button>
                <a href="/Categoria/Index" class="btn btn-warning">Salir</a>
            </div>
        </form>

    </div>
</div>
