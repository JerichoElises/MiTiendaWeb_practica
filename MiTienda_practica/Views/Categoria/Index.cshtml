@model List<CategoriaVM>

<div class="row justify-content-between mt-4">
    <div class="col-4">
        <h4>Categorías</h4>
    </div>
    <div class="col-4 text-end">
        <a href="/Categoria/AddEdit" class="btn btn-success"><i class="fa-solid fa-square-plus"></i> Crear Nuevo</a>
    </div>
</div>

<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th style="width:120px">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td style="width:120px">
                    <a href="/Categoria/AddEdit/@item.CategoriaId" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                    <button class="btn btn-sm btn-danger" onclick="deleteItem(@item.CategoriaId)"><i class="fa-solid fa-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function deleteItem(id) {

            Swal.fire({
                title: "¿Estás seguro de eliminar la categoría?",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Sí, eliminar",
                cancelButtonText: "Cancelar"
            }).then((result) => {

                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("Delete", "Categoria")' + '?id=' + id;
                }

            });

        }
    </script>
}


