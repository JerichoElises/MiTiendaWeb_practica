@model List<ArticuloCarritoVM>


@if (Model.Count() != 0)
{
    <div class="row justify-content-between mt-4">
        <div class="col-4">
            <h4>Artículos en el carrito</h4>
        </div>
        <div class="col-4 text-end">
            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#exampleModal">
                Pagar Ahora
            </button>
        </div>
    </div>

    <hr />

    <table class="table table-striped">
        <thead>
            <tr>

                <th style="width:120px"></th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Total</th>
                <th style="width:120px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="aling-middle">
                    <td style="width:120px">
                        <img class="card-img-top rounded" src="~/imagenes/@item.ImagenNombre" alt="Product image"
                             loading="lazy" style="width:100px" />
                    </td>
                    <td>@item.Nombre</td>
                    <td>@item.Precio</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Precio * item.Quantity).ToString("C2"))</td>


                    <td style="width:120px">
                        <a href="/Home/QuitarArticuloCarrito?productoId=@item.ProductId" class="btn btn-sm btn-danger">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-4" role="alert">
        No hay artículos en el carrito.
    </div>
}

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="/Home/PagarAhora" method="post">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Formulario de Pago</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="modal-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <input type="email" class="form-control" placeholder="Correo Electrónico" />
                            </div>
                            <div class="col-12">
                                <input type="text" class="form-control" placeholder="Dirección" />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" placeholder="País" />
                            </div>
                            <div class="col-6">
                                <input type="text" class="form-control" placeholder="Ciudad" />
                            </div>

                            <hr />

                            <div class="col-12">
                                <input type="text" class="form-control" placeholder="Nombre de la tarjeta" />
                            </div>

                            <div class="col-12">
                                <input type="text" class="form-control" placeholder="Número de la tarjeta" />
                            </div>

                            <div class="col-3">
                                <input type="number" class="form-control" placeholder="MM" />
                            </div>
                            <div class="col-3">
                                <input type="number" class="form-control" placeholder="AAAA" />
                            </div>
                            <div class="col-6">
                                <input type="number" class="form-control" placeholder="CVV" />
                            </div>
                        </div>
                    </div>



                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Pagar ahora</button>
                </div>
            </form>

            
        </div>
    </div>
</div>

