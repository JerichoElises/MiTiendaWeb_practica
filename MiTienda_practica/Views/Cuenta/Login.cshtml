@model LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>@ViewData["Title"] - MiTienda_Practica</title>
    </head>
<body class="bg-body-secondary">
    <div class="row justify-content-center align-items-center vh-100">


        <div class="col-md-6 col-lg-4">
            <div class="card-show">
                <div class="card-body p-4">
                    <h2 class="card-title text-center mb-4">Iniciar sesión</h2>
                    <form action="/Cuenta/Login" method="post">
                        <div class="mb-3">
                            <label class="form-label">Correo</label>
                            <input class="form-control" type="email" asp-for="Correo"/>
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Contraseña</label>
                            <input class="form-control" type="password" asp-for="Contrasena" />
                            <span asp-validation-for="Contrasena" class="text-danger"></span>
                        </div>

                        @if (ViewBag.MensajeExito != null)
                        {
                            <div class="alert alert-success" role="alert">
                                @ViewBag.MensajeExito
                            </div>
                        }

                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" type="submit">Confirmar</button>
                            <a href="/Cuenta/Registro" class="btn btn-outline-secondary">Registrarse</a>
                        </div>

                    </form>
                </div>

            </div>

        </div>
        
    </div>
</body>
</html>
